{
  "build": {
    "dockerfile": "Dockerfile",
    "args": { "VARIANT": "2.7-buster" }
  },
  "extensions": [
    "EditorConfig.EditorConfig",
    "ms-vscode.live-server",
    "rebornix.Ruby"
  ],
  "portsAttributes": {
    "3000": {
      "label": "Coverage",
      "onAutoForward": "silent"
    }
  },
  "postCreateCommand": ".devcontainer/postCreate.sh",
  "remoteUser": "vscode"
}
